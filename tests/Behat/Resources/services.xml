<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <!-- Pages -->
        <service id="setono_sylius_facebook_tracking.behat.page.admin.index_property" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Page\Admin\Property\IndexPropertyPage" parent="sylius.behat.page.admin.crud.index" public="false">
            <argument type="string">setono_sylius_analytics_admin_property_index</argument>
        </service>

        <service id="setono_sylius_facebook_tracking.behat.page.admin.create_property" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Page\Admin\Property\CreatePropertyPage" parent="sylius.behat.page.admin.crud.create" public="false">
            <argument type="string">setono_sylius_analytics_admin_property_create</argument>
        </service>

        <service id="setono_sylius_facebook_tracking.behat.page.admin.update_property" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Page\Admin\Property\UpdatePropertyPage" parent="sylius.behat.page.admin.crud.update" public="false">
            <argument type="string">setono_sylius_analytics_admin_property_update</argument>
        </service>

        <!-- Context: Setup -->
        <service id="setono_sylius_facebook_tracking.behat.context.setup.property" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Context\Setup\PropertyContext">
            <argument type="service" id="setono_sylius_facebook_tracking.repository.property" />
            <argument type="service" id="setono_sylius_facebook_tracking.factory.property" />
        </service>

        <!-- Context: Transform -->
        <service id="setono_sylius_facebook_tracking.behat.context.transform.property" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Context\Transform\PropertyContext">
            <argument type="service" id="setono_sylius_facebook_tracking.repository.property" />
        </service>

        <!-- Context: UI -->
        <service id="setono_sylius_facebook_tracking.behat.context.ui.admin.managing_properties" class="Tests\Setono\SyliusFacebookTrackingPlugin\Behat\Context\Ui\Admin\ManagingPropertiesContext">
            <argument type="service" id="setono_sylius_facebook_tracking.behat.page.admin.index_property" />
            <argument type="service" id="setono_sylius_facebook_tracking.behat.page.admin.create_property" />
            <argument type="service" id="setono_sylius_facebook_tracking.behat.page.admin.update_property" />
        </service>

    </services>
</container>

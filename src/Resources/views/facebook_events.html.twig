<script>
    {% for event in events %}
        {% if event.options is defined %}
            {% if event.name == "Purchase" %}
            fbq('track', '{{ event.name }}', {
                value: '{{ event.options.value }}',
                currency: '{{ event.options.currency }}',
            });
            {% endif %}
        {% else %}
        fbq('track', '{{ event.name }}');
        {% endif %}
    {% endfor %}
</script>

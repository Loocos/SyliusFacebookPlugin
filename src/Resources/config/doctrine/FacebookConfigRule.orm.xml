<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Setono\SyliusFacebookTrackingPlugin\Entity\FacebookConfigRule" table="setono_product_callouts_product_callout_rule">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <many-to-one field="facebookConfig" target-entity="Setono\SyliusFacebookTrackingPlugin\Entity\FacebookConfigInterface" inversed-by="rules">
            <join-column name="facebookConfig_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>